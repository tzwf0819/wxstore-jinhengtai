.container { padding-bottom: 120rpx; }
.address-section { display: flex; justify-content: space-between; align-items: center; padding: 20rpx; background: #fff; margin-bottom: 20rpx; }
.product-list { background: #fff; padding: 0 20rpx; }
.product-item { display: flex; padding: 20rpx 0; border-bottom: 1px solid #eee; }
.product-image { width: 120rpx; height: 120rpx; margin-right: 20rpx; }
.product-info { flex: 1; }
.summary-section { padding: 20rpx; background: #fff; text-align: right; margin-top: 20rpx; }
.submit-bar { position: fixed; bottom: 0; left: 0; width: 100%; display: flex; justify-content: space-between; align-items: center; padding: 20rpx; background: #fff; box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1); }
.total-price { color: #ff0000; font-weight: bold; }
.submit-btn { background: #6A5ACD; color: #fff; border-radius: 40rpx; padding: 0 40rpx; }