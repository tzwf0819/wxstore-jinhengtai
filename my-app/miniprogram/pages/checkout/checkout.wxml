<view class="container">
  <view class="address-section">
    <van-cell-group title="收货地址">
      <van-field
        value="{{ shipping_address }}"
        label="地址"
        placeholder="请输入收货地址"
        bind:input="onAddressInput"
      />
      <van-field
        value="{{ shipping_contact }}"
        label="联系方式"
        placeholder="请输入联系方式"
        bind:input="onContactInput"
      />
    </van-cell-group>
  </view>

  <view class="items-section">
    <van-cell-group title="商品列表">
      <van-card
        wx:for="{{ orderItems }}"
        wx:key="id"
        num="{{ item.quantity }}"
        price="{{ item.price }}"
        title="{{ item.name }}"
        thumb="{{ item.image_url }}"
      />
    </van-cell-group>
  </view>

  <van-submit-bar
    price="{{ totalPrice }}"
    button-text="提交订单"
    bind:submit="onSubmitOrder"
  />
</view>
