<view class="container">
  <!-- 地址选择 -->
  <view class="address-section" bindtap="selectAddress">
    <view wx:if="{{selectedAddress}}">
      <view>{{selectedAddress.name}} {{selectedAddress.phone}}</view>
      <view>{{selectedAddress.address}}</view>
    </view>
    <view wx:else>请选择收货地址</view>
    <view class="arrow">></view>
  </view>

  <!-- 商品列表 -->
  <view class="product-list">
    <view class="product-item" wx:for="{{cart}}" wx:key="index">
      <image class="product-image" src="{{item.image}}"></image>
      <view class="product-info">
        <view class="product-name">{{item.name}}</view>
        <view class="product-spec">{{item.selectedSpec.颜色}} {{item.selectedSpec.尺寸}}</view>
      </view>
      <view class="product-price-quantity">
        <view>¥{{item.price}}</view>
        <view>x{{item.quantity}}</view>
      </view>
    </view>
  </view>

  <!-- 订单总计 -->
  <view class="summary-section">
    <view>商品总价: ¥{{totalPrice}}</view>
  </view>

  <!-- 提交订单栏 -->
  <view class="submit-bar">
    <view class="total">合计: <text class="total-price">¥{{totalPrice}}</text></view>
    <button class="submit-btn" bindtap="submitOrder">提交订单</button>
  </view>
</view>