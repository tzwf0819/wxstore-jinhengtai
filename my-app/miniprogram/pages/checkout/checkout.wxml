<view class="container">
  <!-- Address Section -->
  <view class="section address-section" bindtap="chooseAddress">
    <view wx:if="{{shippingAddress.userName}}" class="address-info">
      <view class="user-info">
        <text class="name">{{shippingAddress.userName}}</text>
        <text class="tel">{{shippingAddress.telNumber}}</text>
      </view>
      <view class="address-detail">{{shippingAddress.provinceName}}{{shippingAddress.cityName}}{{shippingAddress.countyName}}{{shippingAddress.detailInfo}}</view>
    </view>
    <view wx:else class="address-placeholder">
      <text>请选择收货地址</text>
    </view>
    <view class="arrow">></view>
  </view>

  <!-- Product List Section -->
  <view class="section product-section">
    <view class="product-item" wx:for="{{cartItems}}" wx:key="id">
      <image class="product-image" src="{{item.image}}" mode="aspectFill"></image>
      <view class="product-details">
        <view class="product-name">{{item.name}}</view>
        <view class="price-quantity">
          <text class="product-price">¥{{item.price}}</text>
          <text class="product-quantity">x {{item.quantity}}</text>
        </view>
      </view>
    </view>
  </view>

  <!-- Summary Section -->
  <view class="section summary-section">
    <view class="summary-item">
      <text>商品总额</text>
      <text>¥{{totalPrice}}</text>
    </view>
    <view class="summary-item">
      <text>运费</text>
      <text>¥0.00</text>
    </view>
  </view>

  <!-- Submit Bar -->
  <view class="submit-bar">
    <view class="total-amount">
      <text>合计：</text>
      <text class="amount-value">¥{{totalPrice}}</text>
    </view>
    <button class="submit-btn" bindtap="submitOrder">提交订单</button>
  </view>
</view>
