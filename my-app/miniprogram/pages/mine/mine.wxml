<view class="container">
  <!-- 用户信息卡片 -->
  <view class="user-card">
    <view class="user-info">
      <view class="avatar-container">
        <image
          class="avatar"
          mode="aspectFill"
          src="{{userInfo.avatarUrl || '/images/default-avatar.png'}}"
        ></image>
      </view>
      <view class="user-detail">
        <view wx:if="{{userInfo.nickName === '点击登录'}}" class="nickname" bindtap="getUserProfile">{{'点击登录'}}</view>
        <view wx:else class="nickname">{{userInfo.nickName}}</view>
        <view class="user-id" wx:if="{{userInfo.nickName !== '点击登录'}}">ID: {{userInfo._id}}</view>
      </view>
    </view>
  </view>

  <!-- 订单状态卡片 -->
  <view class="order-card">
    <view class="card-header">
      <text class="title">我的订单</text>
      <view class="view-all" bindtap="navigateTo" data-url="/pages/order/list/index">
        <text>查看全部</text>
        <text class="arrow">></text>
      </view>
    </view>
    <view class="order-status">
      <view class="status-item" bindtap="navigateTo" data-url="/pages/order/list/index?type=pending-payment">
        <image class="status-icon" src="/images/mine/pending-payment.png"></image>
        <text class="status-text">待付款</text>
      </view>
      <view class="status-item" bindtap="navigateTo" data-url="/pages/order/list/index?type=pending-delivery">
        <image class="status-icon" src="/images/mine/pending-delivery.png"></image>
        <text class="status-text">待发货</text>
      </view>
      <view class="status-item" bindtap="navigateTo" data-url="/pages/order/list/index?type=pending-receipt">
        <image class="status-icon" src="/images/mine/pending-receipt.png"></image>
        <text class="status-text">待收货</text>
      </view>
      <view class="status-item" bindtap="navigateTo" data-url="/pages/order/list/index?type=completed">
        <image class="status-icon" src="/images/mine/completed.png"></image>
        <text class="status-text">已完成</text>
      </view>
    </view>
  </view>
</view>