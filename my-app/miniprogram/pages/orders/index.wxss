.container {
  padding: 20rpx;
}

.order-card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 26rpx;
  color: #666;
}

.status {
  color: #4CAF50;
  font-weight: bold;
}

.product-list {
  padding: 10rpx 0;
}

.product-item {
  display: flex;
  padding: 15rpx 0;
}

.product-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #333;
}

.price-quantity {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  font-size: 26rpx;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 15rpx;
  margin-top: 10rpx;
  border-top: 1rpx solid #f5f5f5;
}

.total-amount {
  font-size: 30rpx;
  font-weight: bold;
}

.btn {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
  font-size: 26rpx;
  border-radius: 30rpx;
}

.refund-btn {
  background-color: #fff;
  color: #4CAF50;
  border: 1rpx solid #4CAF50;
}

.empty-tip {
  text-align: center;
  color: #999;
  padding: 100rpx 0;
}
