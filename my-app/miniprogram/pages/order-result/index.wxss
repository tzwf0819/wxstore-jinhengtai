.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.result-icon {
  width: 180rpx;
  height: 180rpx;
}

.result-text {
  font-size: 34rpx;
  color: #333;
  margin-top: 40rpx;
  margin-bottom: 60rpx;
}

.btn-area {
  display: flex;
}

.btn {
  margin: 0 20rpx;
  border-radius: 40rpx;
  background-color: #fff;
  border: 1rpx solid #ccc;
}

.btn.primary {
  background-color: #ff5722;
  color: #fff;
  border: none;
}