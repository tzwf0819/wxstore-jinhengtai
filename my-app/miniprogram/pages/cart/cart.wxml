<view class="container">
  <view wx:if="{{cart.length > 0}}" class="cart-list">
    <view class="cart-item" wx:for="{{cart}}" wx:key="index">
      <image class="product-image" src="{{item.image}}"></image>
      <view class="product-info">
        <view class="product-name">{{item.name}}</view>
        <view class="product-spec">{{item.selectedSpec.颜色}} {{item.selectedSpec.尺寸}}</view>
        <view class="product-price">¥{{item.price}} x {{item.quantity}}</view>
      </view>
    </view>
  </view>
  <view wx:else class="empty-cart">
    <text>购物车是空的</text>
  </view>

  <view class="checkout-bar" wx:if="{{cart.length > 0}}">
    <button class="checkout-btn" bindtap="goToCheckout">结算</button>
  </view>
</view>