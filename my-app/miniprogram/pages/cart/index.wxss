
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 100rpx; /* 为结算栏留出空间 */
}

.cart-list {
  padding: 10rpx 0;
}

.cart-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 20rpx;
  margin: 10rpx 20rpx;
  border-radius: 16rpx;
}

.select-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.product-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 8rpx;
  background-color: #f4f4f4;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 180rpx;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.spec-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.product-price {
  font-size: 30rpx;
  color: #ff5722;
  font-weight: bold;
}

.quantity-control {
  display: flex;
  align-items: center;
}

.btn-quantity {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border: 1rpx solid #eee;
  background-color: #f9f9f9;
}

.quantity {
  width: 70rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}

/* 空购物车 */
.empty-cart {
  padding-top: 200rpx;
  text-align: center;
  color: #999;
}

.empty-image {
  width: 200rpx;
  margin-bottom: 20rpx;
}

.go-shopping-btn {
  display: inline-block;
  margin-top: 30rpx;
  padding: 15rpx 50rpx;
  border-radius: 40rpx;
  background: #ff5722;
  color: white;
  font-size: 28rpx;
}

/* 结算栏 */
.checkout-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
}

.select-all-container {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.total-price-container {
  font-size: 28rpx;
}

.total-price {
  color: #ff5722;
  font-weight: bold;
  font-size: 32rpx;
}

.checkout-btn {
  background: linear-gradient(to right, #ff9800, #ff5722);
  color: white;
  border-radius: 40rpx;
  padding: 0 50rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}