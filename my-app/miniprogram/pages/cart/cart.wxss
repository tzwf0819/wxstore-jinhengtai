.container {
  padding-bottom: 140rpx; /* Make space for checkout bar */
  background-color: #f5f5f5;
  min-height: 100vh;
}

.cart-list-container {
  padding: 20rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background-color: #eee;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 160rpx;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.price-stepper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.product-price {
  font-size: 32rpx;
  color: #ff4141;
  font-weight: bold;
}

.stepper {
  display: flex;
  align-items: center;
}

.stepper-btn {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border: 1rpx solid #ddd;
  color: #333;
  font-size: 36rpx;
}

.stepper-btn.minus {
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
}

.stepper-btn.plus {
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}

.stepper-btn.disabled {
  color: #c0c0c0;
  background-color: #f5f5f5;
}

.stepper-input {
  width: 80rpx;
  height: 50rpx;
  min-height: 50rpx;
  text-align: center;
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
  font-size: 28rpx;
}

.delete-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* Empty State */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 20vh;
}

.empty-image {
  width: 300rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.go-shopping-btn {
  background-color: #6A5ACD;
  color: #fff;
  border-radius: 40rpx;
  padding: 0 60rpx;
  font-size: 30rpx;
}

/* Checkout Bar */
.checkout-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
}

.total-price {
  font-size: 28rpx;
  color: #333;
}

.price-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4141;
}

.checkout-btn {
  background-color: #6A5ACD;
  color: #fff;
  border-radius: 40rpx;
  padding: 0 60rpx;
  font-size: 30rpx;
  line-height: 80rpx;
}
