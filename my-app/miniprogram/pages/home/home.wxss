.container {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

.search-bar {
  margin-bottom: 20rpx;
}

.search-bar input {
  width: 100%;
  height: 80rpx;
  border: 1px solid #ccc;
  border-radius: 40rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.swiper-container {
  width: 100%;
  height: 300rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.categories {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.category-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.category-text {
  color: #333;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.product-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
