<view class="container">
  <!-- 搜索栏 -->
  <view class="search-bar">
    <input placeholder="搜索商品" />
  </view>

  <!-- 商品分类 -->
  <view class="categories">
    <view class="category-item">分类1</view>
    <view class="category-item">分类2</view>
    <view class="category-item">分类3</view>
    <view class="category-item">分类4</view>
  </view>

  <!-- 推荐商品 -->
  <view class="recommended">
    <text class="section-title">推荐商品</text>
    <view class="product-list">
      <product-card wx:for="{{recommendedProducts}}" wx:key="id" product="{{item}}"></product-card>
    </view>
  </view>

  <!-- 商品列表 -->
  <view class="all-products">
    <text class="section-title">所有商品</text>
    <view class="product-list">
      <product-card wx:for="{{allProducts}}" wx:key="id" product="{{item}}"></product-card>
    </view>
  </view>
</view>
