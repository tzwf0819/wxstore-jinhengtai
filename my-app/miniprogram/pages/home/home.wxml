<view class="home-container">
  <!-- Banners -->
  <swiper class="banner-swiper" indicator-dots="true" autoplay="true" interval="3000" duration="500">
    <block wx:for="{{banners}}" wx:key="id">
      <swiper-item>
        <image src="{{item.image_url}}" class="slide-image" mode="aspectFill"/>
      </swiper-item>
    </block>
  </swiper>

  <!-- Product List -->
  <view class="product-list-container">
    <view class="product-list-title">热门推荐</view>
    <view class="product-list">
      <block wx:for="{{products}}" wx:for-item="product" wx:key="product.id">
        <navigator url="/pages/product/detail/detail?id={{product.id}}" class="product-card">
          <view>
            <image src="{{product.image_url}}" class="product-image" mode="aspectFill"></image>
            <view class="product-name">{{product.name}}</view>
            <view class="product-price">¥{{product.price}}</view>
          </view>
        </navigator>
      </block>
    </view>
  </view>
</view>
