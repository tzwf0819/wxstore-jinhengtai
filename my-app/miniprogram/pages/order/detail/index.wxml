<view class="container">
  <view wx:if="{{status === 'success'}}" class="result-section">
    <icon type="success" size="64"></icon>
    <view class="result-title">支付成功</view>
    <view class="result-desc">您的订单已成功支付</view>
    <view class="actions">
      <button class="btn" bindtap="viewOrder">查看订单</button>
      <button class="btn" bindtap="goToHome">返回首页</button>
    </view>
  </view>
  <view wx:else class="result-section">
    <icon type="warn" size="64"></icon>
    <view class="result-title">支付失败</view>
    <view class="result-desc">请稍后再试</view>
    <view class="actions">
      <button class="btn" bindtap="goToHome">返回首页</button>
    </view>
  </view>
</view>