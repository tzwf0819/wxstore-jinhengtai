<view class="container" wx:if="{{order}}">
  <van-cell-group title="订单信息">
    <van-cell title="订单号" value="{{order.id}}" />
    <van-cell title="状态" value="{{order.status}}" />
    <van-cell title="总金额" value="¥{{order.total_amount}}" />
    <van-cell title="收货地址" value="{{order.shipping_address}}" />
    <van-cell title="联系方式" value="{{order.shipping_contact}}" />
  </van-cell-group>

  <van-cell-group title="商品列表">
    <van-card
      wx:for="{{order.items}}"
      wx:key="id"
      num="{{item.quantity}}"
      price="{{item.product.price}}"
      title="{{item.product.name}}"
      thumb="{{item.product.image_url}}"
    />
  </van-cell-group>
</view>
