'''<view class="category-container">
  <!-- 左侧分类导航 -->
  <scroll-view class="category-nav" scroll-y>
    <view
      wx:for="{{categories}}"
      wx:key="id"
      class="nav-item {{activeCategoryId === item.id ? 'active' : ''}}"
      bindtap="onCategoryClick"
      data-id="{{item.id}}"
    >
      {{item.name}}
    </view>
  </scroll-view>

  <!-- 右侧商品列表 -->
  <scroll-view class="product-list-container" scroll-y>
    <view wx:if="{{loading}}" class="loading-tip">正在加载商品...</view>
    <view wx:if="{{!loading && products.length === 0}}" class="empty-tip">该分类下暂无商品</view>
    <view class="product-grid">
      <block wx:for="{{products}}" wx:key="id">
        <view class="product-item" bindtap="goToProductDetail" data-id="{{item.id}}">
          <image wx:if="{{item.image_url}}" class="product-image" src="{{item.image_url}}" mode="aspectFill"></image>
          <image wx:else class="product-image" src="/static/images/product_placeholder.png" mode="aspectFill"></image>
          <view class="product-info">
            <view class="product-name">{{item.name}}</view>
            <view class="product-price">¥{{item.price}}</view>
          </view>
        </view>
      </block>
    </view>
  </scroll-view>
</view>
''