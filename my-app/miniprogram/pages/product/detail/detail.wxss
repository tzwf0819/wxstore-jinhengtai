.container {
  padding-bottom: 50px; /* Space for the goods action bar */
}

.product-info {
  padding: 16px;
  background-color: #fff;
}

.price-stock {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.product-price {
  font-size: 24px;
  color: #ee0a24;
  font-weight: bold;
}

.product-stock {
  font-size: 14px;
  color: #999;
}

.product-name {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 8px;
}

.product-description {
  font-size: 14px;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16px;
}

.quantity-selector {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 0;
  border-top: 1px solid #f0f0f0;
  margin-top: 10px;
}

.quantity-selector text {
  font-size: 14px;
  color: #333;
}

.detail-content,
.specs-content {
  padding: 16px;
  background-color: #fff;
  margin-top: 10px;
  font-size: 14px;
  color: #333;
  line-height: 1.8;
}

.van-goods-action {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
