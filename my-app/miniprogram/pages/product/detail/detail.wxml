<view class="container" wx:if="{{product}}">
  <van-image width="100%" height="375" fit="cover" src="{{product.image_url}}" />

  <view class="product-info">
    <view class="price-stock">
      <view class="product-price">¥{{product.price}}</view>
      <view class="product-stock">库存: {{product.stock_quantity || 0}}</view>
    </view>
    <view class="product-name">{{product.name}}</view>
    <view class="product-description">{{product.description}}</view>
    <view class="quantity-selector">
      <text>购买数量</text>
      <van-stepper value="{{ quantity }}" bind:change="onQuantityChange" />
    </view>
  </view>

  <van-tabs active="{{ activeTab }}" bind:change="onTabChange">
    <van-tab title="商品详情">
      <view class="detail-content">
        <!-- Rich text or more images can go here -->
        <view wx:if="{{product.description}}">{{product.description}}</view>
        <view wx:else>暂无商品详情</view>
      </view>
    </van-tab>
    <van-tab title="规格参数">
      <view class="specs-content">
        <view>暂无规格参数</view>
      </view>
    </van-tab>
  </van-tabs>

  <van-goods-action>
    <van-goods-action-icon icon="chat-o" text="客服" bind:click="onClickIcon" />
    <van-goods-action-icon icon="cart-o" text="购物车" bind:click="onClickIcon" />
    <van-goods-action-button text="加入购物车" type="warning" bind:click="addToCart" />
    <van-goods-action-button text="立即购买" bind:click="buyNow" />
  </van-goods-action>
</view>
